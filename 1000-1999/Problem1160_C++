#include <iostream>
#include <fstream>

using namespace std;

fstream in("input.txt", ios::in), out("output.txt", ios::out);

int n, MAX = 0, ind = -2, a, b;

int main()
{
	cin >> n;
	for (int i = 0; i < n; i++)
	{
		cin >> a >> b;
		if (b && a > MAX)
		{
			MAX = a;
			ind = i;
		}
	}
	cout << ind + 1 << endl;
}
