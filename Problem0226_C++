#include <iostream>
#include <fstream>

#define FOR(i,n) for((i) = 0; (i) < (int)(n); (i)++)

using namespace std;

fstream in("input.txt", ios::in), out("output.txt", ios::out);

typedef long long ll;

ll n, k, sum = 1, i, t;

int main()
{
	cin >> n; cin >> k;
	FOR(i, k)
	{
		cin >> t;
		if (t) sum += t - 1;
	}
	if (n - sum > 0) cout << n - sum << endl;
	else cout << 0 << endl;
}
