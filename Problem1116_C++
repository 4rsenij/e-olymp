#include <iostream>
#include <fstream>
#include <string>

#define len length()

using namespace std;

fstream in("input.txt", ios::in), out("output.txt", ios::out);

typedef long long ll;

ll tmp, n, i;
string s;

int main()
{
	while (cin)
	{
		cin >> n;
		if (cin)
		{
			tmp = n;
			s = "";
			if (tmp == 0) s = "10";
			else if (tmp == 1) s = "1";
			else
			{
				for (int i = 9; i > 1; i--)
					while (tmp % i == 0)
					{
						s += i + 48;
						tmp /= i;
					}
				if (tmp != 1) s = "-1";
				else for (int j = 0; j < s.len / 2; j++) swap(s[j], s[s.len - j - 1]);
			}
			cout << s << endl;
		}
	}
}
