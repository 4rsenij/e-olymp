#include <iostream>
#include <fstream>
#include <string>

#define ln length()

using namespace std;

fstream in("input.txt", ios::in), out("output.txt", ios::out);

typedef long long ll;
typedef unsigned long long ull;

ull A, B;
string s, ans;

bool ch()
{
	for (int i = 0; i < s.ln; i++) if (s[i] != '9') return false;
	cout << 1;
	for (int i = 0; i < s.ln - 1; i++) cout << 0;
	cout << 1 << endl;
	return true;
}

int main()
{
	cin >> s;
	A = 0; B = 0;
	if (ch()) return 0;
	for (int i = s.ln / 2 - 1; i >= 0; i--) A = A * 10 + s[i] - 48;
	for (int i = (s.ln + 1) / 2; i < s.ln; i++) B = B * 10 + s[i] - 48;
	if (s.ln % 2 && s[s.ln / 2] != '9' && A <= B)
	{
		for (int i = 0; i < s.ln / 2; i++) cout << s[i];
		cout << (char)(s[s.ln / 2] + 1);
		for (int i = s.ln / 2 - 1; i >= 0; i--) cout << s[i];
		cout << endl;
		return 0;
	}
	if (B >= A)
	{
		A++;
		ll ost = 1;
		for (int i = s.ln / 2 - 1; i >= 0; i--)
		{
			ost += s[i] - 48;
			ans += ost % 10 + 48;
			ost /= 10;
		}
		if (s.ln % 2) s[s.ln / 2] = '0';
	}
	else
	{
		ans = "";
		while (A)
		{
			ans += A % 10 + 48;
			A /= 10;
		}
		for (int i = 0; i < ans.ln / 2; i++) swap(ans[i], ans[ans.ln - i - 1]);
	}
	for (int i = ans.ln - 1; i >= 0; i--) cout << ans[i];
	if (s.ln % 2) cout << s[s.ln / 2];
	cout << ans << endl;
	return 0;
}
