#include <iostream>
#include <fstream>

using namespace std;

fstream in("input.txt", ios::in), out("output.txt", ios::out);

unsigned long long G, n;
int i, j;

unsigned long long gcd(unsigned long long a, unsigned long long b)
{
	return b ? gcd(b, a % b) : a;
}

int main()
{
	for (;;)
	{
		cin >> n;
		if (n)
		{
			G = 0;
			for (i = 1; i < n; i++) for (j = i + 1; j <= n; j++) G += gcd(i, j);
			cout << G << endl;
		}
		else return 0;
	}
}
