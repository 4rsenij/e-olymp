#include <iostream>
#include <fstream>
#include <stdio.h>

using namespace std;

fstream in("input.txt", ios::in), out("output.txt", ios::out);

typedef long long ll;

ll n, d, cnt;
bool star = false;

int main()
{
	cin >> n;
	d = 2;
	while (n)
	{
		if (n % d == 0)
		{
			cnt = 0;
			while (n % d == 0)
			{
				cnt++;
				n /= d;
			}
			if (star) cout << "*";
			cout << d;
			if (cnt > 1) cout << "^" << cnt;
			star = true;
		}
		d++;
		if (d*d > n && n != 1)
		{
			if (star) cout << "*";
			cout << n;
			n = 0;
		}
		if (n == 1) n = 0;
	}
	cout << endl;
}
