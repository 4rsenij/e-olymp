#include <iostream>
#include <fstream>

using namespace std;

fstream in("input.txt", ios::in), out("output.txt", ios::out);

typedef long long ll;

ll n;

int main()
{
	cin >> n;
	switch (n)
	{
	case 1: cout << 1 << endl; break;
	case 2: cout << 2 << endl; break;
	default: cout << 3 * (n - 2) << endl; break;
	}
}
